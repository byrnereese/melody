                        </mt:if>
                    </mt:if>
                </mt:unless>
                </mt:unless>
            </mtapp:statusmsg>
        </mt:if>
    <mt:else>
        <mt:if name="error">
            <mtapp:statusmsg
                id="generic-error"
                class="error">
                <mt:var name="error">
            </mtapp:statusmsg>
        </mt:if>
    </mt:if>
    <mt:if name="message">
        <mtapp:statusmsg
            id="message"
            class="alert">
            <mt:var name="message">
        </mtapp:statusmsg>
    </mt:if>
    <mt:if name="saved_rebuild">
        <mtapp:statusmsg
            id="saved-rebuild"
            class="success">
            <__trans phrase="Your [_1] has been published." params="<mt:var name="name" escape="html">">
        </mtapp:statusmsg>
    </mt:if>
    <mt:Ignore>See http://bugs.movabletype.org/?79288</mt:Ignore>
